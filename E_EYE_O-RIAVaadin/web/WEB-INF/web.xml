<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <!-- SPRING  -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/root-context.xml</param-value>
    </context-param>

    <!--  Vaadin  -->
    <servlet>
        <servlet-name>E-EYE-O</servlet-name>
        <servlet-class>ru.xpoft.vaadin.SpringVaadinServlet</servlet-class>

        <init-param>
            <param-name>beanName</param-name>
            <param-value>eeyeoUI</param-value>
        </init-param>

        <init-param>
            <param-name>systemMessagesBeanName</param-name>
            <param-value>DEFAULT</param-value>
        </init-param>

        <load-on-startup>10</load-on-startup>
    </servlet>
    <session-config>
        <session-timeout>0</session-timeout>
    </session-config>

    <servlet>
        <servlet-name>E-EYE-O Login</servlet-name>
        <servlet-class>ru.xpoft.vaadin.SpringVaadinServlet</servlet-class>

        <init-param>
            <param-name>beanName</param-name>
            <param-value>eeyeoLoginUI</param-value>
        </init-param>

        <init-param>
            <param-name>systemMessagesBeanName</param-name>
            <param-value>DEFAULT</param-value>
        </init-param>

        <load-on-startup>10</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>E-EYE-O Login</servlet-name>
        <url-pattern>/E-EYE-O/Login/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>E-EYE-O</servlet-name>
        <url-pattern>/E-EYE-O/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>E-EYE-O</servlet-name>
        <url-pattern>/VAADIN/*</url-pattern>
    </servlet-mapping>

    <!--  TODO - param for vaadin prod mode -->
    <context-param>
        <param-name>productionMode</param-name>
        <param-value>false</param-value>
    </context-param>

    <!-- Spring Security -->
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
