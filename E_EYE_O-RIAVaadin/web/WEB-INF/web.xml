<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <context-param>
        <param-name>contextClass</param-name>
        <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </context-param>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath*:spring-config*.xml,com.jtbdevelopment.*</param-value>
    </context-param>

    <servlet>
        <servlet-name>myservlet</servlet-name>
        <servlet-class>
            com.jtbdevelopment.e_eye_o.ria.security.authentication.vaadin.RequestHolderApplicationServlet
        </servlet-class>

        <init-param>
            <param-name>UI</param-name>
            <param-value>com.jtbdevelopment.e_eye_o.ria.security.authentication.vaadin.SecuredRoot</param-value>
        </init-param>

    </servlet>

    <servlet-mapping>
        <servlet-name>myservlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
</web-app>
